<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RepairCategories.RepairCategoriesDetailsActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_marginTop="14dp"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Issue" />
    
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="20dp"
        app:cardElevation="8dp">
        
        <ImageView
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:id="@+id/detailImage"
            android:layout_gravity="center"
            android:src="@drawable/iphone_capa"
            android:scaleType="centerCrop"  />
    </androidx.cardview.widget.CardView>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile /Tablet:"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tvMobileTabletDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reparacoes_de_telemoveis_tablets"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desktop / Laptop:"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tvDesktopLaptopDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reparacoes_de_desktops_laptops"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wearables:"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tvWearablesDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reparacoes_de_wearables"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"/>



    <Button
        android:id="@+id/btnRequestQuote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:text="@string/txt_btn_request_quote"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize" />
</LinearLayout>